---
import Header from "./Header.astro";
import TextMask from "./TextMask.jsx";

---

<div>
  <div id="main-container" class="w-full h-screen relative">
    <img src="/background.jpg" alt="background image" class="object-cover w-full h-full z-[5]" />
    <h2 class="z-10 absolute top-10 left-0 right-0 mx-auto text-center uppercase font-extrabold text-white text-9xl"> Anime <br> Page </h2>
    <img src="/character.png" alt="background image" class="absolute left-0 top-0 w-full h-full object-cover z-[15]" />
    <img src="/play.svg" class="z-[15] absolute top-0 right-0 left-0 bottom-0 m-auto size-32 bg-white p-8 rounded-full duration-200 cursor-pointer hover:scale-105">
    <img src="down.svg" class="z-[15] absolute bottom-4 w-16 left-0 right-0 m-auto icon_secondary" >
  </div>
  <Header />
  <div class="prueba2">
    <TextMask client:load />
  </div>
  <section id="prueba" class="h-screen flex items-center justify-center">
    <h1 class="text-4xl font-bold">Anime Page</h1>
  </section>
</div>

<style>

  .icon_secondary{
    animation: move infinite 2s alternate;
  }

  @keyframes move {
    100%{
      transform: scale(1.05) rotate(90deg);
      opacity: 1;
    }
    0%{
      transform: scale(0.95) rotate(90deg);
      opacity: .5;
    }
  }
</style>
