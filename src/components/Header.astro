<script>
  import { gsap } from "gsap";
  import { animePlayAnimation, highPlayAnimation, toggleModalTrailer } from "./../../src/scripts/modalTrailersAnimations.js";
  import { openSidebar, closeSidebar } from "../scripts/navbarAnimations";
  import { inputToggleQuestion } from "../scripts/motionAnimations"

  //navbarAnimations
  const menuIcon = document.getElementById("menuIcon");
  const xIcon = document.getElementById("xIcon");
  const sidebar = document.getElementById("sidebar");
  const sidebarImages = document.getElementById("sidebarImages");

  const iconImages = document.getElementById("iconImages");
  const language = document.getElementById("language");
  const arrowLanguage = document.getElementById("arrowLanguage");
  const charactersList = document.getElementById("charactersList");
  const animesList = document.getElementById("animesList");
  const listLanguages = document.getElementById("listLanguages");
  const motion = document.getElementById("motion");
  const motionContainer = document.getElementById("motionContainer");
  const motionArrow = document.getElementById("motionArrow");
  const movementInputContainer = document.getElementById("movementInputContainer");
  const movementInputBall = document.getElementById("movementInputBall");
  const charactersId = document.getElementById("characters");
  const characterImages = document.getElementById("characterImages");
  const animes = document.getElementById("animes");
  const animeImages = document.getElementById("animeImages");
  const trailers = document.getElementById("trailers");
  const trailerList = document.getElementById("trailerList");

  const animeContainerVideo = document.getElementById("animeContainerVideo");
  const highContainerVideo = document.getElementById("highContainerVideo");

  //modalTrailersAnimation
  const modalTrailers = document.getElementById("modalTrailers");


  animeContainerVideo?.addEventListener("click", ()=>{
    animePlayAnimation();
    toggleModalTrailer(modalTrailers, false);
  })

  highContainerVideo?.addEventListener("click", ()=>{
    highPlayAnimation();
    toggleModalTrailer(modalTrailers, false);
  })


  let openLanguage = false;
  let openMotion = false;
  

  const images = ["sailormoon", "mikasa", "frieren", "hinata", "rukia", "zero", "matoko", "nao", "chainsaw", "jujutsu", "kaijuu", "leveling", "mashle", "Oshi"]
  let anyActive = "";
  images.forEach((character)=>{
    let current = document.getElementById(character);
    let currentButton = document.getElementById(character+"Button")
    
    const movementC = gsap.to(current, {
                x: -400,
                duration: 50,
                yoyo: true,
                repeat: -1,
                ease: "Power1.inOut"
              })

    currentButton?.addEventListener("mouseenter",()=>{
        anyActive = character;
        gsap.to(current, {
            opacity: 1,
            zIndex: 20,
            duration: 0.3,
            })
        movementC.play();
        gsap.to(iconImages,{
            opacity: 0,        
            })
        
    })

    currentButton?.addEventListener("mouseleave",()=>{
        
        gsap.to(current, {
            opacity: 0,
            zIndex: 10,
            duration: 0.3,
            onComplete: ()=>{
              movementC.restart();
              movementC.pause();
                if(anyActive === ""){
                    gsap.to(iconImages,{
                        opacity: 1,
                        zIndex: 0,
                        delay: .2
                    })
                }
            }
        })
    })
  })

  movementInputContainer?.addEventListener("click", ()=>{
      inputToggleQuestion(movementInputBall);
  })

  menuIcon?.addEventListener("click", () => {
    openSidebar(menuIcon, xIcon, sidebar, sidebarImages);
  });

  xIcon?.addEventListener("click", () => {
    closeSidebar(xIcon, menuIcon, sidebar, sidebarImages);
    toggleModalTrailer(modalTrailers, true);
  });

  motion?.addEventListener("click",()=>{
      gsap.to(motionContainer,{
        opacity: openMotion ? 0 : 1,
        zIndex: openMotion ? -10 : 30,
        duration: 0.2
      })
      gsap.to(motionArrow,{
        rotate: openMotion ? (window.innerWidth > 768 ? 180 : 360) : (window.innerWidth > 768 ? 360 : 180),
        duration: 1
      })
      gsap.to(charactersList,{
        opacity: openMotion ? 1 : 0,
        duration: 0.2
      })
      gsap.to(trailerList,{
        opacity: openMotion ? 1 : 0,
        duration: 0.2
      })
      gsap.to(animesList,{
        opacity: openMotion ? 1 : 0,
        duration: 0.2
      })
      gsap.to(language,{
        zIndex: openMotion ? 40 : 20
      })
      openMotion = !openMotion
  })

  language?.addEventListener("click", ()=>{
      gsap.to(arrowLanguage, {
        rotate: openLanguage ? (window.innerWidth > 768 ? 180 : 360) : (window.innerWidth > 768 ? 360 : 180),
        duration: 1
      })
      gsap.to(listLanguages,{
        opacity: openLanguage ? 0 : 1,
        zIndex: openLanguage ? -10 : 30,
        duration: 0.2
      })
      gsap.to(animesList,{
        opacity: openLanguage ? 1 : 0,
        duration: 0.2
      })
      gsap.to(trailerList,{
        opacity: openLanguage ? 1 : 0,
        duration: 0.2
      })
      gsap.to(charactersList, {
          opacity: openLanguage ? 1 : 0,
          zIndex: openLanguage ? 30 : -10,
          duration: 0.2
        })
        gsap.to(motion,{
        zIndex: openLanguage ? 40 : 20
        })
      openLanguage = !openLanguage;
  })

  animes?.addEventListener("click", ()=>{
    
    gsap.to(characterImages,{
      display: "none",
      opacity:  0,
      onComplete: ()=>{
        gsap.to(animeImages,{
          display: "block",
          opacity:  1,
        })
      }
    })
    gsap.to(trailerList,{
      display: "none",
      opacity:  0,
      onComplete: ()=>{
        gsap.to(animesList,{
          display: "block",
          opacity:  1,
        })
      }
    })
    gsap.to(charactersList,{
      display: "none",
      opacity:  0,
      onComplete: ()=>{
        gsap.to(animesList,{
          display: "block",
          opacity:  1,
        })
      }
    })
    gsap.to(charactersId,{
      color: "white",
      background: "none",
      onComplete: ()=>{
        gsap.to(animes,{
          color: "black",
          background: "white",
        })
      }
    })
    gsap.to(trailers,{
      color: "white",
      background: "none",
      onComplete: ()=>{
        gsap.to(animes,{
          color: "black",
          background: "white",
        })
      }
    })
  })

  charactersId?.addEventListener("click", ()=>{
    
    gsap.to(animeImages,{
      display: "none",
      opacity:  0,
      onComplete: ()=>{
        gsap.to(characterImages,{
          display: "flex",
          opacity:  1,
        })
      }
    })
    gsap.to(animesList,{
      display: "none",
      opacity:  0,
      onComplete: ()=>{
        gsap.to(charactersList,{
          display: "flex",
          opacity:  1,
        })
      }
    })
    gsap.to(trailerList,{
      display: "none",
      opacity:  0,
      onComplete: ()=>{
        gsap.to(charactersList,{
          display: "flex",
          opacity:  1,
        })
      }
    })
    gsap.to(animes,{
      color: "white",
      background: "none",
      onComplete: ()=>{
        gsap.to(charactersId,{
          color: "black",
          background: "white",
        })
      }
    })
    gsap.to(trailers,{
      color: "white",
      background: "none",
      onComplete: ()=>{
        gsap.to(charactersId,{
          color: "black",
          background: "white",
        })
      }
    })
  })

  trailers?.addEventListener("click", ()=>{
    gsap.to(animesList,{
      display: "none",
      opacity:  0,
      onComplete: ()=>{
        gsap.to(trailerList,{
          display: "flex",
          opacity:  1,
        })
      }
    })
    gsap.to(charactersList,{
      display: "none",
      opacity:  0,
      onComplete: ()=>{
        gsap.to(trailerList,{
          display: "flex",
          opacity:  1,
        })
      }
    })
    gsap.to(charactersId,{
      color: "white",
      background: "none",
      onComplete: ()=>{
        gsap.to(trailers,{
          color: "black",
          background: "white",
        })
      }
    })
    gsap.to(animes,{
      color: "white",
      background: "none",
      onComplete: ()=>{
        gsap.to(trailers,{
          color: "black",
          background: "white",
        })
      }
    })
  })
</script>

